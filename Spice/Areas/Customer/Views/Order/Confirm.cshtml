@model Spice.Models.ViewModels.OrderDetailsViewModel
@{
    ViewData["Title"] = "Confirm";
}

<br/>

    <div class="whitebackgroundBorder">
        <div class="row px-3">
            <div class="col-8">
            <h2 class="text-info">Order Confirmed</h2>
            </div>
            <div class="col-4 text-right">
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-success form-control">Continue Shopping</a>
            </div>
        </div>
        @if(Model.OrderHeader != null)
        {
            <div style="color:maroon" class="p-3">
                Your Order has been Confirmed. Please see the order summary Below.
                <br>
                Feel Free to have Contact if you feel any Problems.
            </div>
            <partial name="_IndividualOrderDetails" model="Model" />
        }
        else
        {
            <div class="text-danger">Error..... Please Try Again.</div>
        }
    </div>


