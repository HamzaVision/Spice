@model Spice.Models.ViewModels.SubCategoryAndCategoryViewModel
@using Spice.Extensions

<h2 class='text-info'>Details of Sub Category</h2>
<br>
<form method="post" asp-action="Edit">
    <div class="whitebackgroundBorder border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="subCategory.Category.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="subCategory.Category.Name" disabled class="form-control"/>
            </div>
            <span asp-validation-for="subCategory.Category" class="text-danger"></span>
        </div>
        <br/>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="subCategory.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="subCategory.Name" disabled class="form-control" />
            </div>
            <span asp-validation-for="subCategory.Name" class="text-danger"></span>
        </div>
        <br>
        <div class="form-group-row">
            <div class="col-5 offset-2">
                <partial name="_DetailsAndBackToPagePartialView" model="@Model.subCategory.Id" />
            </div>
        </div>
    </div>
</form>