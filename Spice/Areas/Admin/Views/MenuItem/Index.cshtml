@model IEnumerable<MenuItem>


<br>

<div class="border whitebackgroundBorder">
    <div class="row">
        <div class="col-6 text-info"><h2>Menu Item</h2></div>
        <div class="col-6 text-end"><partial name="_CreateButtonPartial" /> </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <thead>
                <tr class="table-secondary">
                    <th>@Html.DisplayNameFor(item => item.Name)</th>
                    <th>@Html.DisplayNameFor(item => item.Price)</th>
                    <th>@Html.DisplayNameFor(item => item.CategoryId)</th>
                    <th>@Html.DisplayNameFor(item => item.SubCategoryId)</th>
                    <th colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Category.Name</td>
                        <td>@item.SubCategory.Name</td>
                        <td><partial name="_EditDetailsDeletePartialView" model="item.Id" /></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <br />
        <p>NO MENU ITEM EXISTS</p>
    }




</div>