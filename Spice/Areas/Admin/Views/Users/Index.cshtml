@model IEnumerable<ApplicationUser>


<br>

<div class="border whitebackgroundBorder">
	<div class="row">
		<div class="col-6 text-info"><h2>Users</h2></div>
		<div class="col-6 text-end">
			<a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info text-dark"><i class="fas fa-plus"></i>&nbsp;Add A New Employee</a>
		</div>

	</div>
	@if (Model.Count() > 0)
	{
		<table class="table table-striped border">
			<thead>
				<tr class="table-secondary">
					<th>@Html.DisplayNameFor(item => item.Name)</th>
					<th>@Html.DisplayNameFor(item => item.Email)</th>
					<th>@Html.DisplayNameFor(item => item.PhoneNumber)</th>
					<th colspan="2"></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Name</td>
						<td>@item.Email</td>
						<td>@item.PhoneNumber</td>
						@if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
						{
							<td>
								<a class="btn btn-success" asp-action="Lock"
								asp-route-id="@item.Id"><i class="fas fa-lock-open"></i></a>
							</td>
						}
						else
						{
							<td>
								<a class="btn btn-danger" asp-action="UnLock"
								asp-route-id="@item.Id"><i class="fas fa-lock"></i></a>
							</td>
						}

					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<br />
		<p>NO USERS EXISTS</p>
	}




</div>