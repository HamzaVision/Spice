@model Spice.Models.ViewModels.OrderDetailsViewModel
@using Spice.Constant_Utility
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<form asp-action="OrderPickUpPost" asp-controller="Order" asp-route-orderId="@Model.OrderHeader.Id" method="post">
    <div class="container row border ml-1 whitebackground" style="width:100%">
        <div class="col-lg-8 col-12" style="border-right:1px solid #bbb9b9">
            <br />
            <input type="hidden" asp-for="@Model.OrderHeader.Id" />

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="OrderHeader.PickUpName">Name</label>
                </div>
                <div class="col-8">
                    <input asp-for="OrderHeader.PickUpName" readonly class="form-control" />
                </div>
            </div>
            <br>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="OrderHeader.ApplicationUser.Email">Email</label>
                </div>
                <div class="col-8">
                    <input asp-for="OrderHeader.ApplicationUser.Email" readonly class="form-control" />
                </div>
            </div>
            <br>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="OrderHeader.PickUpNumber">Phone Number</label>
                </div>
                <div class="col-8">
                    <input asp-for="OrderHeader.PickUpNumber" readonly class="form-control" />
                </div>
            </div>
            <br>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="OrderHeader.FinalTotal">Final Total</label>
                </div>
                <div class="col-8">
                    <input asp-for="OrderHeader.FinalTotal" readonly class="form-control" />
                </div>
            </div>
            <br>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="OrderHeader.OrderDate">Order Date</label>
                </div>
                <div class="col-8">
                    <input asp-for="OrderHeader.OrderDate" readonly class="form-control" />
                </div>
            </div>
            <br>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="OrderHeader.Comments">Comments</label>
                </div>
                <div class="col-8">
                    <input asp-for="OrderHeader.Comments" readonly class="form-control" />
                </div>
            </div>
        </div>


        <div class="col-lg-4 col-12">
           <h4 class="d-flex justify-content-between align-content-center mb-3">
               <span class="text-muted">Order Id:</span>
                <span class="badge badge-secondary badge-pill">@Model.OrderHeader.Id</span>
           </h4>
           <ul class="list-group mb-3">
                @{
                    var total = 0.0;
                }
                @foreach (var details in Model.OrderDetails)
                {
                    <li class="list-group-item d-flex justify-content-between ">
                        <div>
                            <h6 class="my-0">@details.Name</h6>
                            <small class="text-muted">Quantity: @details.count</small>
                        </div>
                        <span class="text-muted">PKR &nbsp; @(details.Price * details.count)</span>
                        @{
                            total += (details.Price * details.count);
                        }
                    </li>
                }
                @if (Model.OrderHeader.CouponCode != null)
                {
                    <li class="list-group-item d-flex justify-content-between">
                        <div class="text-success">
                            <h6 class="my-0">Promo Code</h6>
                            <small class="text-muted">@Model.OrderHeader.CouponCode</small>
                        </div>
                        <span class="text-muted">- @(Model.OrderHeader.OriginalTotal - Model.OrderHeader.FinalTotal) RS</span>
                    </li>
                }
                <li class="list-group-item d-flex justify-content-between">
                    <div class="text-success">
                        <small class="text-info">Total</small>
                    </div>
                    <span class="text-info">@Model.OrderHeader.FinalTotal RS</span>
                </li>
           </ul>
            @if (Model.OrderHeader.Status.Equals(SD.statusReady) && User.IsInRole(SD.ManagerRole) || User.IsInRole(SD.FrontDeskRole))
            {
                <button type="submit" asp-action="OrderPickUpPost" asp-controller="Order" asp-route-orderId="@Model.OrderHeader.Id" class="btn btn-success form-control"><i class="far fa-thumbs-up"></i>&nbsp; Pick Up</button>
            }
            else
            {
                <button type="submit" disabled class="btn btn-info form-control">@Model.OrderHeader.Status</button>
            }

        </div>
    </div>
</form>
