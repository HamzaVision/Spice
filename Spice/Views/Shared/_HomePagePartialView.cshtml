@model IEnumerable<MenuItem>
@using Spice.Constant_Utility
@if (Model.Count() > 0)
{
	<div class="col-12 post @Model.FirstOrDefault().Category.Name.Replace(" ",string.Empty) menu-restaurant">
		<div class="row">
			<h3 class="text-success">@Model.FirstOrDefault().Category.Name</h3>
		</div>
	</div>

	@foreach (var item in Model)
	{
		<div class="border border-info rounded col-12 " style="margin-bottom:10px;margin-top:10px;padding:10px">
			<div class="row">
				<div class="col-md-3 col-sm-12">
					<img src="@item.Image" width="99%" style="border-radius:5px; border:1px solid #bbb9b9"/>
				</div>
                <div class="col-md-9 col-sm-12">
                    <div class="row pr-3">
                        <div class="col-8">
                            <label class="text-primary" style="font-size: 21px;">@item.Name</label>
                            @if (item.spicyness == null)
                            {
                                <label class="text" style="font-size: 15px; color: maroon;">Normal</label>
                            }
                            @if (item.spicyness == "1")
                            {
                                <label class="text-primary" style="font-size: 15px; color: green;">Mild</label>
                            }
                            @if (item.spicyness == "2")
                            {
                                <label class="text-primary" style="font-size: 15px; color: orangered;">Spicy</label>
                            }
                            @if (item.spicyness == "3")
                            {
                                <label class="text-primary" style="font-size: 15px; color: red;">Very Spicy</label>
                            }
                        </div>
                        <div class="col-4 text-right" style="color: maroon;">
                            <h4 style="float: right;">$@item.Price</h4>
                        </div>
                    </div>
                    <div class="row col-12 text-justify d-none d-md-block">
                        <p>@Html.Raw(item.description)</p>
                    </div>
                    @if (User.IsInRole(SD.ManagerRole) || User.IsInRole(SD.KitchenRole) || User.IsInRole(SD.CustomerRole) || User.IsInRole(SD.FrontDeskRole))
                    {
                        <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                            <a asp-action="Details" class="btn btn-success form-control" asp-route-id="@item.Id">Details</a>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                            <a href="/Identity/Account/Login" class="btn btn-success form-control">Details</a>
                        </div>
                    }
   
                </div>
                
			</div>
		</div>
	}
}

